<div class="auth-container">
    <h1>
        <%= title %>
    </h1>

    <% if (error) { %>
        <div class="error">
            <%= error %>
        </div>
        <% } %>

            <% if (typeof success !=='undefined' && success) { %>
                <div class="success"
                    style="background-color: var(--bg-secondary); color: var(--text-primary); padding: 0.75rem; border-radius: 5px; margin-bottom: 1.5rem; border: 1px solid var(--success-color);">
                    <%= success %>
                </div>
                <% } %>

                    <form method="POST" action="<%= formAction || '/' + title.toLowerCase().replace(' ', '') %>">
                        <div class="form-group">
                            <label for="username">Tên đăng nhập</label>
                            <input type="text" id="username" name="username" required>
                        </div>

                        <div class="form-group">
                            <label for="password">Mật khẩu</label>
                            <input type="password" id="password" name="password" required>
                        </div>

                        <% if (formAction==='/signup' ) { %>
                            <div class="form-group">
                                <label for="confirmPassword">Xác nhận mật khẩu</label>
                                <input type="password" id="confirmPassword" name="confirmPassword" required>
                            </div>
                            <% } %>

                                <button type="submit" class="submit-btn">
                                    <%= title %>
                                </button>
                    </form>

                    <div class="auth-link">
                        <% if (formAction==='/signup' ) { %>
                            Đã có tài khoản? <a href="/login">Đăng nhập tại đây</a>
                            <% } else { %>
                                Chưa có tài khoản? <a href="/signup">Đăng ký tại đây</a>
                                <br><br>
                                <a href="/forgot-password">Quên mật khẩu?</a>
                                <% } %>
                    </div>
</div>